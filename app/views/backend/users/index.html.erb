<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    List Users</div>
  <div class="card-body">
    <div class="table-responsive">
    <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
              <% @users.each do | u | %>
                <tr>
                  <td><%= u.name %></td>
                  <td><%= u.email %></td>
                  <td><%= link_to backend_user_edit_path do %>
                    <i class="far fa-edit" data-toggle="tooltip" data-placement="top" title="Edit store_profile?"></i>
                  <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
<script>
$(function () {
    $('[data-toggle="tooltip"]').tooltip()
});
</script>
