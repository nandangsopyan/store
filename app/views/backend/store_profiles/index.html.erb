<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Store Profile</div>
  <div class="card-body">
    <div class="table-responsive">
    <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>About</th>
                    <th>Contact</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
              <% @store_profiles.each do | store_profile | %>
                <tr>
                  <td><%= store_profile.about %></td>
                  <td><%= store_profile.contact %></td>
                  <td><%= link_to edit_backend_store_profile_path(store_profile) do %>
                    <i class="far fa-edit" data-toggle="tooltip" data-placement="top" title="Edit store_profile?"></i>
                  <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>
<script>
$(function () {
    $('[data-toggle="tooltip"]').tooltip()
});
</script>
