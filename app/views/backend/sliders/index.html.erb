<div class="card mb-3">
  <div class="card-header">
    <i class="fas fa-table"></i>
    Slider List</div>
  <div class="card-body">
    <div class="table-responsive">
    <table id="dataTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Slider Name</th>
                    <th>Slider URL</th>
                    <th>Image URL</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
              <% @sliders.each do | slider | %>
                <tr>
                  <td><%= slider.name %></td>
                  <td><%= slider.url %></td>
                  <td><%= link_to 'View Image', slider.image_url %></td>
                  <td><%= link_to edit_backend_slider_path(slider) do %>
                    <i class="far fa-edit" data-toggle="tooltip" data-placement="top" title="Edit slider?"></i>
                  <% end %>| <%= link_to backend_slider_path(slider), method: :delete, data: {confirm: 'Are you sure delete this Slider?'} do %>
                    <i class="far fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Delete Slider?"></i>
                  <% end %>

                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
                <tr>
                    <th>Slider Name</th>
                    <th>Slider URL</th>
                    <th>Image URL</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
  </div>
</div>
<script>
$(document).ready(function() {
    $('#dataTable').DataTable();
} );

$(function () {
    $('[data-toggle="tooltip"]').tooltip()
});
</script>
