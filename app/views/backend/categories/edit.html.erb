<div class="card mx-auto mt-5">
  <div class="card-header">Add New Category</div>
  <div class="card-body">
    <%= form_for [:backend, @category] do | category | %>
      <div class="form-group">
        <%= category.label :name %>
        <%= category.text_field :name, class:'form-control', placeholder:'Category Name', required: 'required', autofocus: 'autofocus' %>
      </div>

      <div class="form-group">
        <%= category.label :description %>
        <%= category.text_area :description, class:'form-control', placeholder:'Category Description', rows: 8, required:'required' %>
      </div>

      <div class="form-group">
        <%= category.label :category_keyword %>
        <%= category.text_field :category_keyword, class:'form-control', placeholder:'Category Keyword', required: 'required' %>
      </div>

      <div class="form-group">
        <div class="form-row">
          <div class="col-md-4">
            <%= category.submit :Save, name: 'save', class: 'btn btn-success btn-block' %>
          </div>
          <div class="col-md-4">
            <%= link_to 'Back', backend_categories_path, class: 'btn btn-secondary btn-block' %>
          </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
