<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= content_for?(:title) ? yield(:title) : @site_name + ' | ' + @site_description %></title>
    <meta name='description' content='<%= yield_meta_tag(:description, @site_description) %>' />
    <meta name='keywords' content='<%= yield_meta_tag(:keywords, @site_meta) %>' />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'frontend', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'frontend', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'navbar' %>
    <div class="container">
      <div class="row">
        <%= render 'category_sidebar' %>
          <div class="col-lg-9">
            <%= yield %>
          </div>
      </div>
    </div>
    <%= render 'footer' %>
  </body>
</html>

